<UserControl x:Class="SwitcherApp.AppWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lib="clr-namespace:SwitcherLib;assembly=SwitcherLib"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance lib:AppWindowViewModel}">
    <StackPanel
        VerticalAlignment="Center"
        >
        <Image
            Source="{Binding Icon}"
            Width="64.0"
            Height="64.0"
            />
        <TextBlock
            Text="{Binding Text}"
            FontFamily="Trebuchet MS"
            FontSize="14.0"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            VerticalAlignment="Bottom"
            TextTrimming="CharacterEllipsis"
            Width="300"
            Padding="10,0,10,0"
            />
    </StackPanel>
</UserControl>
